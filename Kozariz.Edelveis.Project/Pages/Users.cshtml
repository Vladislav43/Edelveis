@page
@model Kozariz.Edelveis.Project.Pages.UserModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<a asp-page="/CreateUser" class="btn btn-primary btn-sm mb-2">Create User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="/EditUser" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">Edit</a>
                    <a asp-page="/DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
